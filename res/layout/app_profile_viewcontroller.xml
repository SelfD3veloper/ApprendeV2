<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-96dp"
        android:layout_marginRight="-96dp"
        android:scaleType="centerCrop"
        android:id="@+id/app_profile_viewcontroller_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_blue_trans"
        android:id="@+id/app_profile_viewcontroller_overlay" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/app_profile_viewcontroller_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="paula.musi"
        android:textSize="20sp"
        android:textColor="#99f0f0f0"
        android:background="@color/app_blue"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/app_profile_viewcontroller_avatar"
        android:id="@+id/app_profile_viewcontroller_username"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_principal"
        android:layout_below="@+id/app_profile_viewcontroller_username"
        android:layout_alignParentLeft="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="match_parent"
            android:background="@color/app_principal_bottom"
            android:textColor="#f0f0f0"
            android:textSize="20sp"
            android:layout_height="48dp"
            android:text="Start to learn"
            android:id="@+id/app_profile_viewcontroller_start"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#f0f0f0"
            android:padding="12dp"
            android:text="Paulina"
            android:id="@+id/app_profile_viewcontroller_first_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33f0f0f0"
            android:layout_marginLeft="12dp"
            android:layout_alignBottom="@+id/app_profile_viewcontroller_first_name"
            android:layout_alignParentLeft="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33f0f0f0"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@+id/app_profile_viewcontroller_email"
            android:layout_alignParentLeft="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33f0f0f0"
            android:layout_marginLeft="12dp"
            android:layout_alignBottom="@+id/app_profile_viewcontroller_email"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#f0f0f0"
            android:padding="12dp"
            android:text="Lopez Ruiz"
            android:id="@+id/app_profile_viewcontroller_last_name"
            android:layout_below="@+id/app_profile_viewcontroller_first_name"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#f0f0f0"
            android:padding="12dp"
            android:text="paula.musi@gmail.com"
            android:id="@+id/app_profile_viewcontroller_email"
            android:layout_below="@+id/app_profile_viewcontroller_last_name"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Share on Twitter"
            android:textColor="#f0f0f0"
            android:textSize="20sp"
            android:background="@color/app_pink"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/app_profile_viewcontroller_share"
            android:layout_above="@+id/app_profile_viewcontroller_start"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="99999 points"
        android:textColor="#f0f0f0"
        android:textSize="18sp"
        android:id="@+id/app_profile_viewcontroller_points"
        android:layout_alignBaseline="@+id/app_profile_viewcontroller_username"
        android:layout_alignBottom="@+id/app_profile_viewcontroller_username"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1th Place"
        android:textColor="#f0f0f0"
        android:textSize="36sp"
        android:gravity="center|right"
        android:id="@+id/app_profile_viewcontroller_place"
        android:layout_alignTop="@+id/app_profile_viewcontroller_avatar"
        android:layout_alignRight="@+id/app_profile_viewcontroller_points"
        android:layout_alignBottom="@+id/app_profile_viewcontroller_avatar"
        android:layout_toRightOf="@+id/app_profile_viewcontroller_avatar" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        layout="@layout/app_action_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>