<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbedoy.apprende"
    android:versionCode="1"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Apprende">
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.ExamActivity"
            android:label="@string/title_activity_examen" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.ThemesActivity"
            android:label="@string/title_activity_temas" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.UserProfileActivity"
            android:label="@string/title_activity_lateral" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.StatisticsActivity"
            android:label="@string/title_activity_estadisticas" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.RegistrationActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name="com.cbedoy.apprende.viewcontrollers.PresentationActivity"
            android:label="@string/title_activity_presentacion" >
        </activity>
    </application>

</manifest>
